{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "library": {
      "type": "object",
      "properties": {
        "book": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "id": { "type": "string" },
              "title": { "type": "string" },
              "author": { "type": "string" },
              "year": { "type": "integer" }
            },
            "required": ["id", "title", "author", "year"]
          }
        }
      },
      "required": ["book"]
    }
  },
  "required": ["library"]
}
